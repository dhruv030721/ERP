generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Faculty {
  id            String       @id @default(uuid())
  name          String
  employeeId    String       @unique
  email         String       @unique
  contactNumber String
  password      String
  departments   Department[]
  subjects      Subject[]
  TimeTable     TimeTable[]
}

model Student {
  id            String     @id @default(uuid())
  name          String
  enrollmentNo  String     @unique
  email         String     @unique
  contactNumber String
  password      String
  department    Department @relation(fields: [departmentId], references: [deptId])
  departmentId  String
  semester      Int
  batch         String
}

model Attendance {
  id             String         @id @default(uuid())
  enrollmentNo   String
  dateAndTime    DateTime
  subject        String
  attendanceType AttendanceType
}

model Department {
  deptId    String     @id @default(uuid())
  deptName  String
  faculty   Faculty?   @relation(fields: [facultyId], references: [employeeId])
  facultyId String?
  students  Student[]
  semesters Semester[]
  Subject   Subject[]
}

model Semester {
  sem          Int         @id
  department   Department? @relation(fields: [departmentId], references: [deptId])
  departmentId String?
  subjects     Subject[]
}

model Subject {
  subjectId    String      @id @default(uuid())
  subjectCode  Int         @unique
  subjectName  String
  faculty      Faculty?    @relation(fields: [facultyId], references: [employeeId])
  facultyId    String?
  semester     Semester?   @relation(fields: [semesterSem], references: [sem])
  semesterSem  Int?
  department   Department? @relation(fields: [departmentId], references: [deptId])
  departmentId String?
}

enum AttendanceType {
  PRESENT
  ABSENT
  HOLIDAY
}

model TimeTable {
  id        String  @id @default(uuid())
  day       String
  time      String
  subject   String
  branch    String
  sem       String
  faculty   Faculty @relation(fields: [facultyId], references: [id])
  facultyId String
}
